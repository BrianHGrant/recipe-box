<h3>My Recipes<h3>
<hr>
  <% if @recipes.any? %>
    <ul>
      <% @recipes.each do |recipe| %>
        <li><a href="/recipes/<%= recipe.id() %>"><%= recipe.name() %></a></li>
      <% end %>
    </ul>
  <% else %>
    <h4>No recipes at this time. Add a recipe below.</h4>
  <% end %>

<h3>Add Recipe</h3>
  <form action="/recipes" method="post">
    <label for="recipe_name">Recipe Name:</label>
    <input type="text" name="recipe_name">
    <label for="recipe_ingredients">Recipe Ingredients:</label>
    <input type="text" name="recipe_ingredients">
    <label for="instructions">Instructions:</label>
    <input type="text" name="instructions"><br>
    <% if @tags.any? %>
      <ul>
        <% @tags.each do |tag| %>
          <li><input type="checkbox" name="recipe_tag[]" value="<%= tag.id() %>"> <%= tag.name() %></li>
        <% end %>
    <% else %>
      <label for"recipe_tag">Tag:</label>
      <input type="text" name="recipe_tag_name">
    <% end %>
    <button type="submit">Save</button>
  </form>
<hr>
<a href="/">Home</a>
